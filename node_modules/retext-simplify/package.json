{
  "name": "retext-simplify",
  "version": "4.1.3",
  "description": "retext plugin to check phrases for simpler alternatives",
  "license": "MIT",
  "keywords": [
    "unified",
    "retext",
    "plugin",
    "simple",
    "simpler",
    "synonym",
    "alternative",
    "phrase"
  ],
  "repository": "retextjs/retext-simplify",
  "bugs": "https://github.com/retextjs/retext-simplify/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Josiah Sprague <josiah.sprague@gmail.com>",
    "Sylvan Swierkosz <sswierkosz@gmail.com>",
    "Tom MacWright <tmcw@users.noreply.github.com>"
  ],
  "files": [
    "index.json",
    "index.js"
  ],
  "dependencies": {
    "lodash.difference": "^4.4.0",
    "nlcst-search": "^1.0.0",
    "nlcst-to-string": "^2.0.0",
    "object-keys": "^1.0.9",
    "quotation": "^1.0.0",
    "unist-util-position": "^3.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "retext": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s retextSimplify > retext-simplify.js",
    "build-mangle": "browserify . -s retextSimplify -p tinyify > retext-simplify.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "retext-simplify.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
